<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_color_gray"
    android:orientation="vertical"
    tools:context=".ui.ChatFragment">

    <TextView
        android:id="@+id/companyNameChat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:background="@color/app_color_gray"
        android:gravity="center"
        android:paddingTop="15dp"
        android:paddingBottom="4dp"
        android:text="@string/text_addProduct_view"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/app_button_dark"/>
    <!-- Chat messages list -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewChat"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:paddingHorizontal="12dp"
        android:paddingTop="8dp"
        android:paddingBottom="4dp"
        tools:listitem="@layout/item_chat_admin" />

    <!-- Message input bar -->
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:background="@android:color/transparent">

        <!-- Combined message container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/chat_container_bg"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:elevation="8dp">

            <!-- Message input -->
            <EditText
                android:id="@+id/messageInput"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:hint="Type a message..."
                android:imeOptions="actionSend"
                android:inputType="textCapSentences|textMultiLine"
                android:maxLines="4"
                android:paddingHorizontal="12dp"
                android:paddingVertical="10dp"
                android:textColor="@android:color/black"
                android:textSize="20sp" />

            <!-- Send button -->
            <ImageButton
                android:id="@+id/btnSend"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/send_button_bg"
                android:contentDescription="Send message"
                android:rotation="-30"
                android:padding="10dp"
                android:src="@drawable/ic_send"
                app:tint="@android:color/white"
                android:elevation="6dp" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>
