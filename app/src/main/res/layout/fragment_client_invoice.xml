<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/clientInvoiceFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    tools:context=".ui.ClientInvoiceFragment">

    <!-- Main Layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvInvoiceHeader"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/text_client_invoices"
                android:textStyle="bold"
                android:padding="10dp"
                android:textSize="20sp"
                android:textColor="@color/white" />

<!--            <ImageButton-->
<!--                android:id="@+id/btnAddInvoice"-->
<!--                android:layout_width="40dp"-->
<!--                android:layout_height="40dp"-->
<!--                android:backgroundTint="@color/purple_500"-->
<!--                android:background="@drawable/bg_circle_purple"-->
<!--                android:src="@drawable/ic_add"-->
<!--                android:tint="@android:color/white"-->
<!--                android:contentDescription="Add new invoice" />-->
        </LinearLayout>

        <!-- Filter or Status Tabs -->
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/invoiceTabLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@android:color/white"
            app:tabIndicatorColor="@color/purple_500"
            app:tabIndicatorHeight="3dp"
            app:tabSelectedTextColor="@color/purple_500"
            app:tabTextColor="@color/black"
            app:tabRippleColor="@android:color/transparent">

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_all" />

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_paid" />

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_pending" />

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_overdue" />
        </com.google.android.material.tabs.TabLayout>

        <!-- RecyclerView for invoice list -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerInvoices"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clipToPadding="false"
            android:paddingBottom="12dp"
            tools:listitem="@layout/item_invoice" />

    </LinearLayout>

    <!-- Loading Overlay -->
    <FrameLayout
        android:id="@+id/loadingOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#66000000"
        android:visibility="gone">

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:indeterminate="true" />
    </FrameLayout>
</FrameLayout>
