<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootScroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/dark_gray"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <!-- Logo or App Title -->
        <TextView
            android:id="@+id/appTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="36sp"
            android:padding="4dp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:fontFamily="sans-serif-medium"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Tagline -->
        <TextView
            android:id="@+id/tagLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/text_app_description_view"
            android:textColor="#B0B0B0"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/appTitle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Card for Email & Role -->
        <androidx.cardview.widget.CardView
            android:id="@+id/formCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            app:cardBackgroundColor="#1E1E1E"
            app:cardCornerRadius="20dp"
            app:cardElevation="6dp"
            app:layout_constraintTop_toBottomOf="@id/tagLine"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Email Label -->
                <TextView
                    android:id="@+id/text_email_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:padding="4dp"
                    android:text="@string/text_email_view"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp" />

                <!-- Email Input -->
                <EditText
                    android:id="@+id/emailInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#BBBBBB"
                    android:hint="@string/text_email_input"
                    android:inputType="textEmailAddress"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#B0B0B0" />

                <!-- Role Switch -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/roleLabelLeft"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="14dp"
                        android:text="@string/text_employee_view"
                        android:textColor="#B0B0B0"
                        android:textSize="16sp" />

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/roleSwitch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10dp"
                        android:thumbTint="@color/samsung_switch_thumb"
                        android:trackTint="@color/samsung_switch_track" />

                    <TextView
                        android:id="@+id/roleLabelRight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/text_client"
                        android:textColor="#B0B0B0"
                        android:textSize="16sp" />
                </LinearLayout>

                <!-- Send OTP -->
                <Button
                    android:id="@+id/sendOtpBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:backgroundTint="#2979FF"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/text_sent_otp_view"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp" />

                <!-- OTP Section -->
                <EditText
                    android:id="@+id/otpInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:backgroundTint="#BBBBBB"
                    android:hint="@string/hint_enter_otp_view"
                    android:inputType="number"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#B0B0B0"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/verifyOtpBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:backgroundTint="#4CAF50"
                    android:text="@string/text_verify_otp_view"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/goToHomeBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:backgroundTint="#9C27B0"
                    android:text="@string/text_go_to_dashboard_view"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:visibility="gone" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
