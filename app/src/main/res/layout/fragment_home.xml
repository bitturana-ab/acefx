<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipeRefreshLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#2E2E2E"
        android:padding="16dp"
        tools:context=".ui.HomeFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- ðŸ” Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingTop="6dp"
                android:paddingBottom="16dp"
                android:weightSum="1">

                <TextView
                    android:id="@+id/tvUserName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.9"
                    android:text="John W."
                    android:textColor="@android:color/white"
                    android:textSize="28sp"
                    android:textStyle="bold" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnChatNow"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:paddingHorizontal="16dp"
                    android:stateListAnimator="@null"
                    android:text="@string/text_chat"
                    android:textColor="@color/app_button_dark"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:backgroundTint="@color/app_card_dark_gray"
                    app:cornerRadius="10dp"
                    app:icon="@drawable/ic_chat"
                    app:iconGravity="textStart"
                    app:iconPadding="8dp"
                    app:iconSize="20dp"
                    app:iconTint="@color/app_button_dark" />
            </LinearLayout>

            <!-- âž• Add Project & ðŸ’¸ Pay Bill -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <!-- Add Project Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:backgroundTint="#D9D9D9"
                    android:elevation="10dp"
                    android:radius="16dp"
                    app:cardCornerRadius="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <com.google.android.material.button.MaterialButton
                            android:id="@id/addProjectBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:layout_marginTop="8dp"
                            android:padding="10dp"
                            android:paddingHorizontal="16dp"
                            android:stateListAnimator="@null"
                            android:text="Add Project"
                            android:textColor="@android:color/black"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            app:backgroundTint="@color/app_card_dark_gray"
                            app:cornerRadius="10dp"
                            app:icon="@drawable/ic_add_circle_rounded"
                            app:iconGravity="textStart"
                            app:iconPadding="8dp"
                            app:iconSize="20dp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Pay Bill Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:backgroundTint="#D9D9D9"
                    android:elevation="10dp"
                    android:radius="16dp"
                    app:cardCornerRadius="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">


                        <TextView
                            android:id="@+id/totalBillView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="6dp"
                            android:text="@string/text_bill_amount"
                            android:textColor="@android:color/black"
                            android:textSize="18sp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnPayBill"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:paddingHorizontal="16dp"
                            android:stateListAnimator="@null"
                            android:text="Pay Bill"
                            android:textColor="@color/app_button_dark"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            app:backgroundTint="@color/app_card_dark_gray"
                            app:cornerRadius="10dp"
                            app:icon="@drawable/ic_money"
                            app:iconGravity="textStart"
                            app:iconPadding="8dp"
                            app:iconSize="20dp"
                            app:iconTint="@color/app_button_dark" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!-- ðŸ“¦ Project Card -->
            <LinearLayout
                android:id="@+id/projectListContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="24dp"/>

        </LinearLayout>
    </ScrollView>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
