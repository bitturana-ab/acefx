<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.acefx_app.ui.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_clientProfileFragment"
            app:destination="@id/clientProfileFragment" />
        <action
            android:id="@+id/action_homeFragment_to_staffProfileFragment"
            app:destination="@id/staffProfileFragment" />
    </fragment>

    <fragment
        android:id="@+id/projectsFragment"
        android:name="com.example.acefx_app.ui.ProjectsFragment"
        android:label="Projects"
        tools:layout="@layout/fragment_projects" />

    <fragment
        android:id="@+id/accountFragment"
        android:name="com.example.acefx_app.ui.AccountFragment"
        android:label="Account"
        tools:layout="@layout/fragment_account" />

    <fragment
        android:id="@+id/clientProfileFragment"
        android:name="com.example.acefx_app.ui.ClientProfileFragment"
        android:label="Client Profile"
        tools:layout="@layout/fragment_client_profile" />

    <fragment
        android:id="@+id/staffProfileFragment"
        android:name="com.example.acefx_app.ui.StaffProfileFragment"
        android:label="Staff Profile"
        tools:layout="@layout/fragment_staff_profile" />
</navigation>
